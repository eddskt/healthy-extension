{
  "manifest_version": 3,
  "name": "Healthy Language Filter",
  "version": "0.2.0",
  "description": "Suaviza linguagem negativa e oculta conteúdos sensíveis em níveis configuráveis",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://raw.githubusercontent.com/*"
  ],
  "permissions": [
    "storage"
  ],
  "action": {
    "default_title": "Healthy Language Filter",
    "default_popup": "popup.html"
  }
}
